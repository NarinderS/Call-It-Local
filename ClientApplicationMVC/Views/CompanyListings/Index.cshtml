<!--
    This page will be used to search for and display Company names
-->
@{
    ViewBag.Title = "Index";
}

<h2>Search For Companies</h2>

@using (Html.BeginForm("Search", "CompanyListings"))
{
    <p>@ViewBag.Message</p>
    <br />

    @Html.TextBox("textCompanyName")
    <input type="submit" value="Search" class="btn btn-default" />
    <br /><br /><br />
}

@if (ViewBag.Companylist != null)
{

    if (ViewBag.Companylist.Length == 0)
    {
        <p>Your search did not return any results. Please try again.</p>
    }
    else
    {
        <p style="font-size:larger">Results:</p> <br />
        foreach (string item in ViewBag.Companylist)
        {
            @Html.ActionLink(item, "DisplayCompany/" + item, "CompanyListings")
            <br />
        }
    }
}
